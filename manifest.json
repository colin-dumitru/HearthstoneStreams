{
  "manifest_version": 2,

  "name": "Hearthstone Streams",
  "description": "This extension displays currently active Hearthstone streams.",
  "version": "0.1.0",

  "icons": { "16": "icon16.png",
           "48": "icon16.png",
          "128": "icon16.png" },

  "permissions": [
    "https://api.twitch.tv/",
    "storage",
    "background"
  ],
  "options_page": "src/options.html",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "src/popup.html",
     "default_title": "earthstone Streams"
  },

  "background": {
    "scripts": ["src/js/jquery.js", "src/js/background.js"],
    "persistent": false
  },

  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}